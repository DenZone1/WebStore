@model OrderViewModel

<form asp-action="Checkout" asp-antiforgery="true">
    <div class="row">
        <div class="col-sm-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div>
                <label asp-for="Phone" class="sr-only"></label>
                <input asp-for="Phone" class="form-control" placeholder="Phone"/>
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="Address" class="sr-only"></label>
                <input asp-for="Address" class="form-control" placeholder="Address"/>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="Description" class="sr-only"></label>
                <input asp-for="Description" class="form-control" placeholder="Comment"/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

        </div>
        <div class="col-sm-6">
            @{
                ViewData.TryGetValue("TotalPrice", out var total_price);
            }
            
            @if (total_price is decimal price and > 0)
            {
                <div class="total_area">
                    <ul>
                        <li>Shipping cost <span>Free</span></li>
                        <li>Total <span>@price.ToString("c")</span></li>
                    </ul>
                    <a class="btn btn-default update" href="">Update</a>
                    <input class="btn btn-default check_out" type="submit" value="Place your order"/>
                </div>
            }
        </div>
    </div>
</form>