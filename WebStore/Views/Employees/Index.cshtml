@model IEnumerable<WebStore.Models.Employee>

<div class="container">
    <h3>Сотрудники</h3>

    <table class="table">
        <thead>
            <tr>
            <th>Id</th>
            <th>Фамилия</th>
            <th>Имя</th>
            <th>Отчетсво</th>
            <th>Возраст</th>
            <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach(var employee in Model)
            {
                <tr>
                    <td>@employee.Id</td>
                    <td>
                        <a asp-controller="Employees" asp-action="Details" asp-route-id="@employee.Id">@employee.LastName</a>
                        
                    </td>
                    <td>@employee.Name</td>
                    <td>@employee.Patronymic</td>
                    <td>@employee.Age</td>
                    <td>
                        <a asp-action="Edit" asp-route-Id="@employee.Id" class="btn btn-sm btn-default">
                            <i class="fa fa-edit"></i>
                        </a>
                    </td>
                </tr>   
            }
        </tbody>
    </table>  

<a asp-controller="Home" asp-action="Index">На главную</a>
</div>    