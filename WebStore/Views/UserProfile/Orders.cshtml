@model IEnumerable<UserOrderViewModel>

@{
    Layout = "_UserProfileLayout";
    ViewBag.Title = "Order list";
}

<table class="table">
    <thead>
    <tr>
        <th>#</th>
        <th>Date</th>
        <th>Adress</th>
        <th>Phone</th>
        <th>Amount</th>
        <th>Description</th>
    </tr>
    </thead>
    <tbody>
    @{ var i = 1; }
    @foreach (var order in Model)
    {
        <tr>
            <td>@(i++)</td>
            <td>@order.Date.ToString("dd/MM/yy HH:mm")</td>
            <td>@order.Adress</td>
            <td>@order.Phone</td>
            <td>@order.TotalPrice.ToString("c")</td>
            <td>@order.Description</td>
        </tr>
    }
    </tbody>
</table>